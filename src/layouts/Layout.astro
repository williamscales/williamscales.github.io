---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
interface Props {
    title: string;
    name: string;
    occupation: string;
    address: string;
    url: string;
    urlText: string;
    metaDescription: string;
    year: string;
}

const {title, year, name, occupation, address, url, urlText, metaDescription} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description"
          content={metaDescription}>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>
<Header
        name={name}
        occupation={occupation}
        address={address}
        url={url}
        urlText={urlText}
/>
<main>
    <slot/>
</main>
<Footer
        name={name}
        year={year}
/>
</body>
</html>
<style is:global>
    :root {
        --main-bg-color: #f3f4f6;
        --title-color: #262626;
        --text-color: #424242;
        --font-family: "Lato", sans-serif;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: var(--main-bg-color);
        font-family: var(--font-family);
    }

    header,
    footer {
        text-align: center;
        padding: 1rem;
        background-color: var(--title-color);
        color: white;
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    header a {
        color: white;
    }

</style>